{% extends 'base.html.twig' %}

{% block title %}Tractor index{% endblock %}

{% block body %}
    <h1>Tractor index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tractor in tractors %}
            <tr>
                <td>{{ tractor.id }}</td>
                <td>{{ tractor.name }}</td>
                <td>
                    <a href="{{ path('tractor_show', {'id': tractor.id}) }}">show</a>
                    <a href="{{ path('tractor_edit', {'id': tractor.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('tractor_new') }}">Create new</a>
{% endblock %}
