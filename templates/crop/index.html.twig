{% extends 'base.html.twig' %}

{% block title %}Crop index{% endblock %}

{% block body %}
    <h1>Crop index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for crop in crops %}
            <tr>
                <td>{{ crop.id }}</td>
                <td>{{ crop.name }}</td>
                <td>
                    <a href="{{ path('crop_show', {'id': crop.id}) }}">show</a>
                    <a href="{{ path('crop_edit', {'id': crop.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('crop_new') }}">Create new</a>
{% endblock %}
